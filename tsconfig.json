{
  "compilerOptions": {
    /*==========================================  File Layouts ==========================================*/
    "rootDir": "./src",
    "outDir": "./dist",

    /*==========================================  Environment setup & latest features ==========================================*/
    "target": "es2022",
    "module": "esnext",
    "moduleDetection": "force",
    "jsx": "react-jsx",
    "allowJs": true,

    /*==========================================  Bundler mode ==========================================*/

    "moduleResolution": "bundler",
    "verbatimModuleSyntax": true,

    /*==========================================  Best Practices ==========================================*/
    "strict": true,
    "skipLibCheck": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedIndexedAccess": true,
    "noImplicitOverride": true,

    /*==========================================  Strict Flags ==========================================*/
    "noUnusedLocals": true,
    "noUnusedParameters": true,

    "baseUrl": "./src",
    "paths": {
      "@config/*": ["config/*"],
      "@lib/*": ["lib/*"],
      "@middlewares/*": ["middlewares/*"],
      "@modules/*": ["modules/*"],
      "@types/*": ["types/*"]
    }
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
